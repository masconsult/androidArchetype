<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="helloAndroid"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
  	<requiredProperty key="appName">
  		<defaultValue />
  	</requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>.gitignore</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="${rootArtifactId}-app" dir="App" name="${rootArtifactId}-app">
      <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>res/layout</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>res/values</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8" packaged="true">
          <directory>src</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-ldpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-hdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-mdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>.project</include>
            <include>.classpath</include>
            <include>default.properties</include>
            <include>AndroidManifest.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-test" dir="Test" name="${rootArtifactId}-test">
      <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>res/layout</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>res/values</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8" packaged="true">
          <directory>src</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-ldpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-hdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-mdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>.project</include>
            <include>.classpath</include>
            <include>default.properties</include>
            <include>AndroidManifest.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>
